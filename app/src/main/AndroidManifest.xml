<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mkmkmk.capteursandroid">

    <uses-feature android:name="android.hardware.camera2" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Capteurs" />
        <activity android:name=".Secouer" />
        <activity android:name=".Lumiere" />
        <activity android:name=".Proximite" />
        <activity android:name=".Gyroscope" />
        <activity android:name=".OrientationVector" />
        <activity android:name=".Direction" />
        <activity android:name=".Direction" />
        <activity android:name=".Accelerometre" />
        <activity android:name=".DetectionCapteurs" />
        <activity android:name=".GPS"></activity>
    </application>

</manifest>